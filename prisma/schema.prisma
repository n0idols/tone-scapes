generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id         String   @id @default(cuid())
  name       String
  desc       String
  features   String
  price      Int
  categoryId String
  gallery    String[]
  image      String?
  mobileimg  String?
  tabletimg  String?
  shortname  String?
  category   Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id       String    @id @default(cuid())
  name     String
  image    String?
  Products Product[]
}
